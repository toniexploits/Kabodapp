<resources>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="StandardButton">
        <item name="android:background">@drawable/standard_button_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SendButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:background">@drawable/send_button_rounded</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Poppins</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LinkText" parent="Text">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ChatBubble">
        <item name="android:textSize">@dimen/chat_text_size</item>
        <item name="android:minHeight">@dimen/chat_standard_size</item>
        <item name="android:maxHeight">@dimen/chat_max_size</item>
    </style>
</resources>
